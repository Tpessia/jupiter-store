@model Júpiter_Store.ViewModels.UserManagerViewModel

@{
    ViewBag.Title = "Editar Usuário";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "UserManager"))
{
    @Html.ValidationSummary(true, "Ajustes os erros seguintes.")

    <div class="form-group">
        @Html.LabelFor(u => u.Email)
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control", disabled="true" })
        @Html.ValidationMessageFor(u => u.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.UserRoleIds)
        @Html.ListBoxFor(u => u.UserRoleIds, new MultiSelectList(Model.Roles, "Id", "Name", Model.UserRoleIds), new {@class = "form-control", multiple = "multiple"})
        @Html.ValidationMessageFor(u => u.UserRoleIds)
    </div>

    @Html.HiddenFor(u => u.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-first">Salvar</button>
}